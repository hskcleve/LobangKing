<Page id="categoryFilterPickerModal" shownModally="onShownModally">
    <GridLayout rows="auto,*" height="40%">
        <FlexboxLayout class="modalHeader">
            <Label row="0" text="Select Category Filter"/>
        </FlexboxLayout>
        <StackLayout row="1" style="padding:10%">
            <ListPicker id="listPicker" items="{{categories}}"/>
             <Button class="-primary" text="Confirm" tap="confirmOnTap"/>
        </StackLayout>
       
    </GridLayout>
</Page>