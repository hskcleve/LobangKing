<Page id="announcementCreateModal" shownModally="onShownModally">
    <GridLayout rows="auto,*,auto,auto" height="50%">
        <FlexboxLayout class="modalHeader">
            <Label row="0" text="Create Announcement" />
        </FlexboxLayout>
        <ScrollView row="1">
            <StackLayout style="padding:10%">
                <Label class="h2" text="Announcement Description" />
                <TextView style="font-size: 12" hint="Enter Announcement Description" text="{{temp_announcement.description}}" autocorrect="false" textWrap="true"></TextView>
                <Label class="h2" text="Announcement Picture" />
                <TextField style="font-size: 12" hint="Enter Announcement Picture Link" text="{{temp_announcement.picture}}" autocorrect="false" textWrap="true"></TextField>
            </StackLayout>
        </ScrollView>
        <Button row="2" class="-primary" style="margin:5,10,5,10" text="Confirm Create" tap="confirmCreateAnnouncementOnTap" />
        <Button row="3" class="-secondary" style="margin:5,10,10,10" text="Close" tap="closeCreateAnnouncementModalOnTap" />
    </GridLayout>
</Page>