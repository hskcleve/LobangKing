<Page id="announcementUpdateDeleteModal" shownModally="onShownModally">
    <GridLayout rows="auto,*,auto,auto,auto" height="50%">
        <FlexboxLayout class="modalHeader">
            <Label row="0" text="Edit or Delete Announcement" />
        </FlexboxLayout>
        <ScrollView row="1">
            <StackLayout style="padding:10%" verticalAlignment="center">
                <Label class="h2" text="Announcement Description" />
                <TextView style="font-size: 12" text="{{temp_announcement.description}}" autocorrect="false" textWrap="true"></TextView>
                <Label class="h2" text="Announcement Picture" />
                <TextField style="font-size: 12" text="{{temp_announcement.picture}}" autocorrect="false" textWrap="true"></TextField>
            </StackLayout>
        </ScrollView>
        <Button row="2" class="-primary" style="margin:5,10,5,10" text="Confirm Edits" tap="confirmEditAnnouncementOnTap" />
        <Button row="3" class="-secondary" style="margin:5,10,5,10" text="Delete" tap="confirmDeleteAnnouncementOnTap" />
        <Button row="4" class="-secondary" style="margin:5,10,10,10" text="Close" tap="closeUpdateAnnouncementModalOnTap" />
    </GridLayout>
</Page>