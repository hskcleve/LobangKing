<Page id="my_communities" loaded="onLoaded" navigatedTo="onNavigatedTo" xmlns:customUI="~/04 Custom UI">
    <ActionBar>
        <Label class="title-mycomms" text="My Communities" />
    </ActionBar>

    <GridLayout class="gradientBg" rows="auto,auto,*,auto">
        <!-- search bar -->
        <GridLayout row="0">
            <TextField class="searchbar" row="0" hint="Search my communities" textWrap="true" />
        </GridLayout>
        <Label class="h2" row="1" text="My Communities" textAlignment="center" />
        <!-- my communities -->
        <ScrollView row="2" orientation="vertical" scrollBarIndicatorVisible="false">
            <StackLayout>
                <Repeater items="{{communities}}">
                    <Repeater.itemsLayout>
                        <StackLayout orientation="vertical" />
                    </Repeater.itemsLayout>
                    <Repeater.itemTemplate>
                        <GridLayout class="community"> 
                            <Image class="community-img" src="{{image}}" stretch="aspectFill" param="{{name}}" imageToPass="{{image}}"
                                tap="selectCommunityOnTap" />
                            <Label class="community-name" text="{{name}}" textAlignment="center" textWrap="true" />
                        </GridLayout>
                    </Repeater.itemTemplate>
                </Repeater>
            </StackLayout>
        </ScrollView>
        <customUI:navbar row="3" />
    </GridLayout>
