<Page id="create-post" loaded="onLoaded" navigatedTo="onNavigatedTo">

    <StackLayout rows="*, auto, auto, *, auto">

        <Label text="Create Post" row="1" class="h2 centered" />
        <TextView hint="What's on your mind?" row="2" id="post-body" />
        <TextView hint="Add Image URL here" row="3" id="post-image" />
        <Button text="Add Post" class="primary" style="margin-top:40" row="4" tap="createPostOnTap" />

    </StackLayout>

</Page>