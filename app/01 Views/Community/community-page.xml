<Page id="community-page" loaded="onLoaded">
    <ActionBar title='Community Page' />
    <StackLayout class="gradientBg" columns='2*,*' height='100%'>
        <ListView height='100%' items="{{ posts }}">
            <ListView.itemTemplate>
                <GridLayout 
                height="280" 
                borderRadius="10" 
                rows="*, auto, auto" 
                columns="*" 
                margin="5 10" 
                padding="0">
                    <Label row="1" margin="10 10 0 10" fontWeight="700" fontSize="18" text="{{ body }}" />
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page> 